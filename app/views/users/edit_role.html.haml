= form_header "Edit role For #{@user.email}"
= form_for(@user, :url => update_role_user_path(@specimen)) do |f|
  .contentbox_body
    = render "shared/error_messages", :target => @user
    .input_group
      = f.label :role_id, "Role"
      = f.collection_select(:role_id, @roles, :id, :name, :default => "user", :include_blank => true)
  .form_actions
    .add_variables
      = f.submit "Save", :class => "blue basic_field"
      = button_link_to 'Back', @user
