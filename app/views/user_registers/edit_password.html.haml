= form_header 'Change Password'
= form_for(resource, :as => resource_name, :url => users_update_password_path, :html => { :method => :put }) do |f|
  .contentbox_body
    - if @user.errors.any?
      %p.notification{:id => "*.errors"}
        - @user.errors.full_messages.each do |msg|
          = msg
          %br/
    .input_group
      = f.label :current_password
      = f.password_field :current_password
      %a.asterisk_icon{:title => "Required"}
      %span#changepassword_hint We need your current password for confirmation
    .input_group
      = f.label :password, "New password"
      = f.password_field :password
      %a.asterisk_icon{:title => "Required"}
    .input_group
      = f.label :password_confirmation, "Confirm new password"
      = f.password_field :password_confirmation
      %a.asterisk_icon{:title => "Required"}
  .form_actions
    .add_variables
      = f.submit "Update"
      = link_to 'Cancel', root_path
