=render :partial => 'shared/modal_form', :locals => {:obj => @system, :modal_title => ("Manage This System (" + @system.name + ")")}
%div &nbsp;
.field.line
  %label Settings
  .lastUnit
    =button_link_to "Edit System", edit_management_system_path(@system), :class => 'edit'
    =button_link_to "Manage Security Groups", system_security_groups_path(@system), :class => "security"
    =button_link_to "Manage System Members", edit_members_system_path(@system), :class => "security"
.field.line
  %label Contents
  .lastUnit
    =button_link_to "Add Data Object", new_system_data_object_path(@system), :remote => true, :class => "add"
    =button_link_to "Manage Filetypes", system_file_types_path(@system), :class => "file_type"


