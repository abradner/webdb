%h3 Add New Attribute
= form_for [@system, @data_object, @data_object_attribute], :remote => true do |f|
  .field.line
    %label= required_field("Attribute Information:")
    .lastUnit
      = f.text_field :name, :class => "small_text basic_field", :placeholder => "Attribute Name (max 45 chars)"
    .lastUnit
      = f.text_field :label, :class => "small_text basic_field", :placeholder => "Display Label (max 255 chars)"
  .field.line
    %label= required_field("Attribute Parameters")
    .lastUnit
      = "Attribute Type: "
      = f.select :attribute_type, options_for_select(AppConfig.attribute_types.invert)
    .lastUnit
      = f.text_field :length, :class => "small_text basic_field", :placeholder => "Length or Decimal Places"
  .field.line
    %label= required_field("Attribute Options:")
    .lastUnit
      = f.label :editable, "Editable?"
      = f.check_box :editable, :default => true
    .lastUnit
      = f.label :is_id, "Is an ID?"
      = f.check_box :is_id, :default => false
    .lastUnit
      = f.label :required, "Required?"
      = f.check_box :required, :default => false
  .field.line
    .field.actions
      #cancel_attribute_button.button
        %span Cancel
      = f.submit "Save Attribute", :class => "blue basic_field"
