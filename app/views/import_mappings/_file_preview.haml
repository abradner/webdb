
#file_preview
  %table
    %thead
      %tr
        -@csv[:header].each do |cell|
          %th.truncate
            = cell
      %tr
        -@csv[:header].each do |cell|
          - id = @csv[:header].index(cell)
          %th.truncate.column{:id => "column_#{id}"}<
            - if @mappings and @mappings["column_#{id}"]
              - attr = @assigned_attrs.find(@mappings["column_#{id}"])
              %p.attribute_label.draggable{"data_id" => attr.id } #{attr.name}

    %tbody
      - @csv[:data].each do |row|
        %tr
          - row.each do |cell|
            %td.truncate
              = cell
