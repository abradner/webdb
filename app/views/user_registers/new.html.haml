#body_container
  #body_container_inner
    .contentbox_header
      %strong User Sign Up
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
    .contentbox_body
      = render "shared/error_messages", :target => @user
      = render :partial => 'account_details', :locals  => {:f => f}
      = render :partial => 'personal_details', :locals  => {:f => f}
    .hr
    .form_actions
      .add_variables
        = f.submit "Submit Request", :class => "blue basic_field"
        &nbsp;
        = button_link_to 'Cancel', root_path
  .push
